{
  "name": "energy-portfolio-slice",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "echo \"todo: implement builds\"",
    "dev": "pnpm dev:api",
    "dev:api": "pnpm -C services/api dev",
    "dev:web": "pnpm -C apps/web dev",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "seed": "tsx local/seed.ts",
    "db:up": "docker compose -f local/docker-compose.dynamodb.yml up -d",
    "db:down": "docker compose -f local/docker-compose.dynamodb.yml down",
    "db:logs": "docker compose -f local/docker-compose.dynamodb.yml logs -f",
    "db:purge": "docker compose -f local/docker-compose.dynamodb.yml down -v"
  },
  "devDependencies": {
    "@apollo/server": "^5.1.0",
    "@aws-sdk/client-dynamodb": "^3.927.0",
    "@aws-sdk/lib-dynamodb": "^3.626.1",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.6.2",
    "tsx": "^4.7.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  }
}
