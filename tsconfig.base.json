{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM"],
    "strict": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@energy-portfolio/domain/*": ["packages/domain/src/*"],
      "@energy-portfolio/shared/*": ["packages/shared/src/*"],
      "@energy-portfolio/api/*": ["services/api/src/*"],
      "@energy-portfolio/frontend/*": ["frontend/src/*"]
    },

    "types": ["node", "vitest/globals"]
  },
  "exclude": ["node_modules", "dist", "build"]
}